# text under cursor is to be white
cursor-text = #FFFFFF
# Necessary for reflecting changes i guess!
shell-integration-features = no-cursor,sudo,no-title

# line-height 
adjust-cell-height = 10%

# hide mouse when typing
mouse-hide-while-typing = true
